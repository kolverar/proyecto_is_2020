<!doctype html>
<html lang="es">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">

    <link rel="stylesheet" href="./stylesheets/style.css">

    <title>Tequilas Para Ingenieros</title>
  </head>
  <body>
    <!-- NAVEGACION -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
          <a class="navbar-brand" href="/front">Tequilas</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
              <a class="nav-link" href="/front/agregar">Crear<span class="sr-only">(current)</span></a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- MRETODO POST-->
    <div class="container">
      <div class="row">
        <div class="col-sm-8" style="background-color:white;">
          <form method="POST" id="crearTequila">
            <div class="form-group">
              <label>ID</label>
              <input name="id" type="number" required="id" class="form-control" id="id" aria-describedby="id" placeholder="ID">
              <label>Nombre</label>
              <input name="nombre" type="text" required="id" class="form-control" id="nombre" aria-describedby="nombre" placeholder="Tequila">
            </div>
            <div class="form-group">
              <label>Empresa</label>
              <input name="empresa" type="text" required="id" class="form-control" id="empresa" placeholder="Empresa">
            </div>
            <div class="form-group">
              <label>Agave</label>
              <input name="tipoAgave" type="text" required="id" class="form-control" id="tipoAgave" placeholder="Tipo de agave">
            </div>
            <div class="form-group">
              <label>Porcentaje de alcohol</label>
              <input name="porcentajeAlcohol" type="number" required="id" class="form-control" id="porcentajeAlcohol" placeholder="Porcentaje de alcohol">
            </div>
            <div class="form-group">
              <label>Origen</label>
              <input name="estadoOrigen" type="text" required="id" class="form-control" id="estadoOrigen" placeholder="Origen">
            </div>
            <div class="form-group">
              <label>Precio</label>
              <input name="precio" type="number" required="id" class="form-control" id="precio" placeholder="$$$">
            </div>
            <div class="form-group">
              <label>Imagen</label>
              <input name="imagen" type="text" required="id" class="form-control" id="imagen" placeholder="URL">
            </div>
            <button type="submit" class="btn btn-primary">Crear</button>
          </form>
        </div>
      </div>
    </div>



    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
  </body>
</html>
